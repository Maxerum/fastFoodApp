<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.example.fastfoodapp.userprofile.orderhistory.UserOrderHistoryViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:refreshing="@{viewModel.mDataLoading}"
            app:onRefresh="@{viewModel}">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/orders_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="50dp"
                app:items="@{viewModel.mOrders}"/>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <com.google.android.material.button.MaterialButton
            app:cornerRadius="@dimen/button_rounded_corners_radius"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/welcome_screen_button_height"
            android:layout_marginStart="@dimen/welcome_screen_side_margin"
            android:layout_marginEnd="@dimen/welcome_screen_side_margin"
            android:backgroundTint="@color/fastfoodapp_red"
            android:text="@string/clear_order_history_action"
            android:onClick="@{() -> viewModel.clearUserOrderHistory()}"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>