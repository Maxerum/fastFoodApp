<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FastFoodApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/fastfoodapp_dark_blue</item>
        <item name="colorPrimaryDark">@color/fastfoodapp_dark_blue</item>
        <item name="colorAccent">@color/fastfoodapp_dark_blue</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorBackground">@color/fastfoodapp_light_gray</item>

        <item name="colorSecondary">@color/fastfoodapp_red</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_rounded_bg</item>
    </style>

    <style name="Theme.FastFoodApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FastFoodApp.TextAppearance.Medium" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FastFoodApp.TextAppearance.Medium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FastFoodApp.TextAppearance.Big" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

    <style name="FastFoodApp.TextAppearance.Big.Dark">
        <item name="android:textColor">@color/fastfoodapp_gray</item>
    </style>

    <style name="FastFoodApp.TextAppearance.Big.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FastFoodApp.TextAppearance.Big.Black.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FastFoodApp.TextAppearance.Big.Green">
        <item name="android:textColor">@color/fastfoodapp_green</item>
    </style>

    <style name="FastFoodApp.TextAppearance.Big.Red">
        <item name="android:textColor">@color/fastfoodapp_red</item>
    </style>

    <style name="FastFoodApp.TextAppearance.ItemQuantity" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/item_quantity_text_size</item>
    </style>

    <style name="FastFoodApp.TextAppearance.ItemQuantity.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FastFoodApp.TextAppearance.Large" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="FastFoodApp.TextAppearance.Large.Dark">
        <item name="android:textColor">@color/fastfoodapp_gray</item>
    </style>

    <style name="FastFoodApp.TextAppearance.Large.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FastFoodApp.TextAppearance.Big.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FastFoodApp.TextAppearance.WelcomeScreen" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">@dimen/welcome_screen_text_size</item>
        <item name="android:textColor">@color/fastfoodapp_red</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FastFoodApp.TextAppearance.Huge.Dark">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FastFoodApp.TextAppearance.Huge.Dark.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FastFoodApp.TextAppearance.Huge" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/fastfoodapp_gray</item>
        <item name="android:textSize">@dimen/huge_text_size</item>
    </style>

    <style name="FastFoodApp.TextAppearance.Huge.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FastFoodApp.TextAppearance.Biggest.Dark" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/fastfoodapp_gray</item>
        <item name="android:textSize">@dimen/biggest_text_size</item>
    </style>

    <style name="FastFoodApp.TextAppearance.Biggest.Dark.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FastFoodApp.TextAppearance.OrderTimestamp.Black" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/order_timestamp_text_size</item>
    </style>

    <style name="FastFoodApp.TextAppearance.OrderTimestamp.Black.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FastFoodApp.TextAppearance.Small.Light" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/fastfoodapp_gray</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="FastFoodApp.TextAppearance.Small.Light.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FastFoodApp.TextAppearance.Regular" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
    </style>

    <style name="FastFoodApp.TextAppearance.Regular.Dark">
        <item name="android:textColor">@color/fastfoodapp_gray</item>
    </style>

    <style name="FastFoodApp.TextAppearance.Regular.Dark.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- style for Bigger helper text in TextInputLayout -->
    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">22dp</item>
    </style>
    <!-- style for Error message -->
    <style name="ErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="TextInputEditText" parent="FastFoodApp.TextAppearance.Huge.Dark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextInputEditText.PasswordField">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="TextInputEditText.EmailField">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="FastFoodApp.ButtonStyle" parent="@style/Widget.AppCompat.Button">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/fastfoodapp_border_gray</item>
        <item name="cornerRadius">16dp</item>
    </style>

</resources>